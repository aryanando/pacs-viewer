{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@ohif/core": ["platform/core/src"],
      "@ohif/ui": ["platform/ui/src"],
      "@ohif/ui-next": ["platform/ui-next/src"],
      "@ohif/i18n": ["platform/i18n/src"],
      "@ohif/app": ["platform/app/src"],
      "@ohif/extension-default": ["./extensions/default/src"],
      "@ohif/extension-measurement-tracking": ["./extensions/measurement-tracking/src"],
      "@ohif/extension-cornerstone-dicom-sr": ["./extensions/cornerstone-dicom-sr/src"],
      "@ohif/extension-cornerstone-dicom-seg": ["./extensions/cornerstone-dicom-seg/src"],
      "@ohif/extension-ultrasound-pleura-bline": ["./extensions/usAnnotation/src"],
      "@ohif/mode-ultrasound-pleura-bline": ["./modes/usAnnotation/src"],
      "@ohif/extension-cornerstone": ["./extensions/cornerstone/src"],
      "@ohif/extension-dicom-pdf": ["./extensions/dicom-pdf/src"],
      "@ohif/mode-segmentation": ["./modes/segmentation/src"],
      "@state": ["./platform/app/src/state"],
      "~/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": [],
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "platform/**/src/**/*.ts",
    "platform/**/src/**/*.tsx",
    "platform/**/src/**/*.js",
    "platform/**/src/**/*.jsx",
    "platform/**/public/**/*",
    "extensions/**/src/**/*.ts",
    "extensions/**/src/**/*.tsx",
    "extensions/**/src/**/*.js",
    "extensions/**/src/**/*.jsx",
    "modes/**/src/**/*.ts",
    "modes/**/src/**/*.tsx",
    "modes/**/src/**/*.js",
    "modes/**/src/**/*.jsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "tests/**/*.js",
    "tests/**/*.jsx",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/cypress/**",
    "**/playwright/**",
    "**/.next/**",
    "**/out/**"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
